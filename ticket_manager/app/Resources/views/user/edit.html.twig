{% extends 'layout.html.twig' %}

{% block body %}
    <div role="main" class="main-content">

      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Gestion des utilisateurs</h1>
        <p>Formulaire permettant la création d'un utilisateur</p>

        <div class="information_header">
          {{ form_start(delete_form) }}
              <input type="submit" class="btn btn-danger" value="Delete">
          {{ form_end(delete_form) }}
          <h2 class="sub-header">Formulaire d'édition</h2>
        </div>
        <form method="post" name="appbundle_user" class="form-horizontal">


          <div class="form-group">
            <label class="required col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              {{ form_widget(edit_form.email , { 'attr': {'class': 'form-control'} }) }}
              {% if form_errors(edit_form.email) %}
                <div class="row">
                  <div class="col-md-6 offset-md-3 error_form">
                    <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(edit_form.email) }}</span>
                  </div><br/>
                </div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Nom utilisateur</label>
            <div class="col-sm-10">
              {{ form_widget(edit_form.username , { 'attr': {'class': 'form-control'} }) }}
              {% if form_errors(edit_form.username) %}
              <div class="row">
                <div class="col-md-6 offset-md-3 error_form">
                  <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(edit_form.username) }}</span>
                </div><br/>
              </div>
            {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Equipe</label>
            <div class="col-sm-10">
              {{form_widget(edit_form.userSquad , { 'attr': {'class': 'selectpicker'} }) }}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Numéro de téléphone</label>
            <div class="col-sm-10">
              {{ form_widget(edit_form.userPhoneNumber , { 'attr': {'class': 'form-control'} }) }}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Application</label>
              <div class="col-sm-10">
                  {{ form_widget(edit_form.userApplication , { 'attr': {'class': 'selectpicker'} }) }}
              </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Rôle :</label>
              <div class="col-sm-10">
                {{form_widget(edit_form.roles , { 'attr': {'class': 'selectpicker'} }) }}
              </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
              <input type="submit" class="btn btn-primary blue" id="_submit" name="_submit" value="Valider" />
            </div>
          </div>

          {{ form_row(edit_form._token) }}
          </form>
      </div>
    </div>



{% endblock %}

{% extends 'layout.html.twig' %}

{% block body %}

    <div role="main" class="main-content">

      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Gestion des utilisateurs</h1>
        <p>Formulaire permettant la création d'un utilisateur</p>

        <h2 class="sub-header">Formulaire de création</h2>
        <form method="post" name="appbundle_user" class="form-horizontal">


          <div class="form-group">
            <label class="required col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              {{ form_widget(form.email , { 'attr': {'class': 'form-control'} }) }}
              {% if form_errors(form.email) %}
                <div class="row">
                  <div class="col-md-6 offset-md-3 error_form">
                    <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.email) }}</span>
                  </div><br/>
                </div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Nom utilisateur</label>
            <div class="col-sm-10">
              {{ form_widget(form.username , { 'attr': {'class': 'form-control'} }) }}
              {% if form_errors(form.username) %}
              <div class="row">
                <div class="col-md-6 offset-md-3 error_form">
                  <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.username) }}</span>
                </div><br/>
              </div>
            {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Mot de passe</label>
            <div class="col-sm-10">
              {{ form_widget(form.plainPassword.first , { 'attr': {'class': 'form-control'} }) }}
              {% if form_errors(form.plainPassword.first) %}
              <div class="row">
                <div class="col-md-6 offset-md-3 error_form">
                  <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.plainPassword.first) }}</span>
                </div><br/>
              </div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Confirmation mot de passe</label>
            <div class="col-sm-10">
              {{ form_widget(form.plainPassword.second , { 'attr': {'class': 'form-control'} }) }}
              {% if form_errors(form.plainPassword.second) %}
              <div class="row">
                <div class="col-md-6 offset-md-3 error_form">
                  <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.plainPassword.second) }}</span>
                </div><br/>
              </div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Equipe</label>
            <div class="col-sm-10">
              {{form_widget(form.userSquad , { 'attr': {'class': 'selectpicker'} }) }}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Numéro de téléphone</label>
            <div class="col-sm-10">
              {{ form_widget(form.userPhoneNumber , { 'attr': {'class': 'form-control'} }) }}
            </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Application</label>
              <div class="col-sm-10">
                  {{ form_widget(form.userApplication , { 'attr': {'class': 'selectpicker'} }) }}
              </div>
          </div>

          <div class="form-group">
            <label class="required col-sm-2 control-label">Rôle :</label>
              <div class="col-sm-10">
                {{form_widget(form.roles , { 'attr': {'class': 'selectpicker'} }) }}
              </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
              <input type="submit" class="btn btn-primary blue" id="_submit" name="_submit" value="Valider" />
            </div>
          </div>

          {{ form_row(form._token) }}
          </form>
      </div>
    </div>
{% endblock %}

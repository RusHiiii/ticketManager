{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Squad</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ squad.id }}</td>
            </tr>
            <tr>
                <th>Squaddate</th>
                <td>{% if squad.squadDate %}{{ squad.squadDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Squadname</th>
                <td>{{ squad.squadName }}</td>
            </tr>
            <tr>
                <th>Squadcapacity</th>
                <td>{{ squad.squadCapacity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('squad_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('squad_edit', { 'id': squad.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends "::layout.html.twig" %}

{% block title %}Ajouter un client{% endblock %}

{% block body %}

<div role="main" class="main-content">
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Gestion des Clients</h1>
    <p>Formulaire permettant la création d'un client</p>

    <h2 class="sub-header">Formulaire de création</h2>

    <form method="post" name="appbundle_priority" class="form-horizontal">
      <div class="form-group">
        <label class="required col-sm-2 control-label">Nom</label>
        <div class="col-sm-10">
          {{ form_widget(form.customerName , { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(form.customerName) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.customerName) }}</span>
              </div><br/>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="form-group">
        <label class="required col-sm-2 control-label">Prénom</label>
        <div class="col-sm-10">
          {{ form_widget(form.customerLastName , { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(form.customerLastName) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.customerLastName) }}</span>
              </div><br/>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="form-group">
        <label class="required col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          {{ form_widget(form.customerEmail , { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(form.customerEmail) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.customerEmail) }}</span>
              </div><br/>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="form-group">
        <label class="required col-sm-2 control-label">Adresse</label>
        <div class="col-sm-10">
          {{ form_widget(form.customerAddress , { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(form.customerAddress) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.customerAddress) }}</span>
              </div><br/>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="form-group">
        <label class="required col-sm-2 control-label">Téléphone</label>
        <div class="col-sm-10">
          {{ form_widget(form.customerPhoneNumber , { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(form.customerPhoneNumber) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.customerPhoneNumber) }}</span>
              </div><br/>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary blue" value="Create" />
        </div>
      </div>
      {{ form_row(form._token) }}
      </form>  </div>
</div>

{% endblock %}

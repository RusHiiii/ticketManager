{% extends 'layout.html.twig' %}

{% block body %}
<div role="main" class="main-content">

  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Gestion des Groupes</h1>
    <p>Formulaire permettant l'édition d'un groupe</p>

    <div class="information_header">
      {{ form_start(delete_form) }}
          <input type="submit" class="btn btn-danger" value="Delete">
      {{ form_end(delete_form) }}
      <h2 class="sub-header">Formulaire d'édition</h2>
    </div>

    <form method="post" name="appbundle_squad" class="form-horizontal">
      <div class="form-group">
        <label class="required col-sm-2 control-label">Date</label>
        <div class="col-sm-10">
          {{ form_widget(edit_form.applicationName, { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(edit_form.applicationName) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(edit_form.applicationName) }}</span>
              </div><br/>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary blue" value="Modifier" />
        </div>
      </div>
      {{ form_row(edit_form._token) }}
      </form>
</div>
{% endblock %}

{% extends 'layout.html.twig' %}

{% block body %}

    <div role="main" class="main-content">

      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1>Commentaire Création</h1>
        <p>Formulaire de création d'un commentaire'</p>
        <h2 class="sub-header">Formulaire de création</h2>

        <form method="post" name="appbundle_ticket" class="form-horizontal">
          <div class="form-group">
            <label class="required col-sm-2 control-label">Commentaire :</label>
            <div class="col-sm-10">
              {{ form_widget(form.commentValue , { 'attr': {'class': 'form-control'} }) }}
              {% if form_errors(form.commentValue) %}
                <div class="row">
                  <div class="col-md-6 offset-md-3 error_form">
                    <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.commentValue) }}</span>
                  </div><br/>
                </div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary blue" value="Create" />
            </div>
          </div>
          {{ form_row(form._token) }}
          </form>
      </div>
    </div>
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% extends "::layout.html.twig" %}

{% block fos_user_content %}
<div role="main" class="main-content">

  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Gestion du profil</h1>
    <p>Gestion de mon profil d'utilisateur</p>

    <div class="information_header">
      <h2 class="sub-header">Mon profil</h2>
    </div></br>

    <div class="form-group">
      <label class="col-sm-2 control-label">Nom d'utilisateur:</label>
      <div class="col-sm-10">
           {{ user.username }}
      </div>
    </div></br>
    <div class="form-group">
      <label class="col-sm-2 control-label">Mail:</label>
      <div class="col-sm-10">
           {{ user.email }}
      </div>
    </div></br>
    <div class="form-group">
      <label class="col-sm-2 control-label">Téléphone:</label>
      <div class="col-sm-10">
           {{ user.userPhoneNumber }}
      </div>
    </div></br>
    <div class="form-group">
      <label class="col-sm-2 control-label">Equipe:</label>
      <div class="col-sm-10">
           {{ user.userSquad }}
      </div>
    </div></br>
    <div class="form-group">
      <label class="col-sm-2 control-label">Application:</label>
      <div class="col-sm-10">
           {{ user.userApplication }}
      </div>
    </div></br>
    <div class="form-group">
      <div class="col-sm-10">
        <a href="/profile/change-password"><button type="button" class="btn btn-primary blue">Change password</button></a>
      </div>
    </div>
</div>

{% endblock fos_user_content %}

{% trans_default_domain 'FOSUserBundle' %}

{% extends "::layout.html.twig" %}

{% block fos_user_content %}
<div role="main" class="main-content">

  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Gestion du profil</h1>
    <p>Gestion de mon profil d'utilisateur</p>

    <div class="information_header">
      <h2 class="sub-header">Modification mot de passe</h2>
    </div></br>

    <form name="fos_user_change_password_form" method="post" action="/profile/change-password" class="fos_user_change_password">
      <div class="form-group">
        <label class="required col-sm-2 control-label">Mot de passe actuel</label>
        <div class="col-sm-10">
          {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(form.current_password) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.current_password) }}</span>
              </div><br/>
            </div><br/>
          {% endif %}
        </div>
      </div>
      <div class="form-group">
        <label class="required col-sm-2 control-label">Nouveau mot de passe</label>
        <div class="col-sm-10">
          {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(form.plainPassword.first) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.plainPassword.first) }}</span>
              </div><br/>
            </div><br/>
          {% endif %}
        </div>
      </div>
      <div class="form-group">
        <label class="required col-sm-2 control-label">RÃ©peter mot de passe</label>
        <div class="col-sm-10">
          {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
          {% if form_errors(form.plainPassword.second) %}
            <div class="row">
              <div class="col-md-6 offset-md-3 error_form">
                <span><button type="button" class="btn btn-danger btn-xs">Error</button>{{ form_errors(form.plainPassword.second) }}</span>
              </div><br/>
            </div><br/>
          {% endif %}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="btn btn-primary blue" type="submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
      </div>
      {{ form_row(form._token) }}
      </form>
  </div>
</div>
{% endblock fos_user_content %}
